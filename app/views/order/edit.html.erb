<h1>Edit <%= @order.id %> </h1>
<h3> <%= @order.company_name %> - <%= @order.company_document %> </h3>

<%= @order.products.each do |product| %>
    <h3> ItemA </h3>
    <%= form_for(product, method: :patch, url: product_path(product)) do |f| %>
        <div class="form-group">
            <%= f.label :code, 'Código' %>
            <%= f.text_field :code, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :quantity, 'Qtdade' %>
            <%= f.text_field :quantity, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :price, 'Preço' %>
            <%= f.text_field :price, class: 'form-control' %>            
        </div>
         <%= f.submit 'Enviar', class: "btn btn-default" %>

    <% end %>
     
<% end %>    
