<h3>Pedido: <%= @order.id %> </h1>
<h5>Empresa: <%= @order.company_name %> - <%= @order.company_document %> </h3>


<table id="sourcetable" class="table  table-striped table-sm">

  <thead>
    <tr>      
      <th scope="col">Codigo</th>
      <th scope="col">Descrição</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Preço</th>      
    </tr>
  </thead>
  <tbody>  
    <% @order.products.each do |product| %>     
      <tr data-product-code= <%= product.code %>
          data-product-description= <%= product.description %>
          data-product-quantity= <%= product.quantity %>
          data-product-price= <%= product.price %> 
          data-product-url= <%= product_path(product)%>> 
        <td>       
            <%= product.code %>
        </td>
        <td>       
            <%= product.description %>
        </td>        
        <td>       
            <%= product.quantity %>
        </td>
        
        <td>       
           <input type="text" value="<%= product.price %>">
        </td>
        
      </tr>    
    <% end %>    
  </tbody>
</table>
<%= javascript_include_tag params[:controller] %>
